<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.product %></title>
</head>
<body>
  <h1><%= product.product %></h1>
  <p>Description: <%= product.description %></p>
  <p>Price: <%= product.price %></p>

  <!-- Add a form for updating the product -->
  <form action="/products/<%= product.id %>" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <label for="updateProduct">Update Product:</label>
    <input type="text" id="updateProduct" name="product" required>
    <label for="updateDescription">Update Description:</label>
    <input type="text" id="updateDescription" name="description" required>
    <label for="updatePrice">Update Price:</label>
    <input type="number" step="0.01" id="updatePrice" name="price" required>
    <button type="submit">Update</button>
  </form>

  <!-- Add a form for deleting the product -->
  <form action="/products/<%= product.id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit">Delete</button>
  </form>
</body>
</html>


